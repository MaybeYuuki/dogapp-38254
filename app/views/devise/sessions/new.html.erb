<%= render "devise/shared/second-header"%>

<%= form_with model: @user, url: new_user_session_path, class: 'registration-main', local: true do |f| %>
  <div class='form-header'>
    <div class='form-background-header'>
      <h1 class='form-deader-text'>
        ログイン
      <h1>
    </div>
  </div>

  <div class='form-main-login'>
    <div class="form-group-login">
      <div class='form-text-wrap'>
        <label class="form-text-login">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default-login", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="form-group-login">
      <div class='form-text-wrap'>
        <label class="form-text-login">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default-login", id:"password", placeholder:"" %>
    </div>
    <div class='form-group-login'>
      <%= f.submit "ログイン" ,class:"login-red-btn" %>
    </div>
  </div>
<% end %>