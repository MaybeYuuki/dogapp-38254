<header class='top-page-header'>
  <div class='top-page-icon'>
  <%= link_to image_tag("902.png", class:"dog-icon"), "/" %>
  </div>
  <div class='search-bar-contents'>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードから探す'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
  </div>
  <div class='nav'>
    <ul class='lists-right'>
      <%# if user_signed_in? %>
        <li><%#= link_to 'nickname', "#", class: "user-nickname" %></li> 
        <li><%#= link_to 'ログアウト',  "#", method: :delete, class: "logout" %></li> 
      <%# else %>
        <li><%= link_to 'ログイン',  "#", class: "login" %></li>
        <li><%= link_to '新規登録',  "#", class: "sign-up" %></li>
      <%# end %>
    </ul>
  </div>
</header>

<div class='top-page-main'>
  <%= image_tag("dog-index.png", class:"dog-image") %>
  <div class='title'>
    <%= image_tag("dog-footprints.png", class:"dog-footprints") %>
    <div class='sale-title'>販売中の犬</div>
  </div>

  <%# @items.each do |item| %>
      <li class='list'>
        <%#= link_to dog_path(dog.id) do %>
        <div class='dog-img-content'>
          <%#= image_tag dog.image, class: "item-img" %>

          <%# if item.purchase.present? %>
          <div class='sold-out'>
            <span>Sold Out!!</span>
          </div>
          <%# end %>

        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%#= item.name %>
          </h3>
          <div class='item-price'>
            <span><%#= item.price %>円<br><%#= item.postage.name %></span>
            <div class='star-btn'>
              <%#= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
        <%# end %>
      </li>
  <%# end %>

  <div class='purchase-btn'>
    <%= link_to '販売する',  "#", class: "purchase-dog" %>
  </div>











</div>